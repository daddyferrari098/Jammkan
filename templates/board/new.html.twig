{% extends 'base.html.twig' %}

{% block title %}Créer un tableau - {{ parent() }}{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col">
            <h1>Créer un nouveau tableau</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-save me-1"></i> Créer le tableau
                            </button>
                            <a href="{{ path('app_board_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
