{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-sm">
                <div class="card-header bg-trello text-white">
                    <h2 class="h4 mb-0">Connexion</h2>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form action="{{ path('app_login') }}" method="post">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>                        {# Utilisons un token CSRF standard de Symfony #}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        {# Champ caché pour la redirection après connexion #}
                        <input type="hidden" name="_target_path" value="{{ path('app_dashboard') }}">

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                            <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                        </div>

                        <button class="btn btn-lg btn-primary w-100" type="submit">
                            Se connecter
                        </button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a href="{{ path('app_register') }}">Créer un compte</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
